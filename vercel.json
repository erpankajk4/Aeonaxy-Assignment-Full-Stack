{
  "version": 2,
  "builds": [
    {
      "src": "backend/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1",
      "status": 200
    }
  ]
}
